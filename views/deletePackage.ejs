<!DOCTYPE html>
<html lang="en">

<head>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.1/css/all.css" integrity="sha384-/frq1SRXYH/bSyou/HUp/hib7RVN1TawQYja658FEOodR/FQBKVqT9Ol+Oz3Olq5" crossorigin="anonymous">
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="css/admincss.css">
  <title>Delete Packages </title>

</head>

<body>

  <div class="wrap">
    <div class="sec">
      <div class="top_navbar">
        <div class="hamburger">
          <a href="#">
            <i class="fas fa-bars"></i>
          </a>
        </div>
      </div>
      <div class="cont">
        <% if(success!=""){%>
          <div class="alert alert-success alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong><%=success%>!</strong>
          </div>
        <% } %>
        <form class="" action="delete-package" method="post">
         <div class="table-responsive">
           <table class="table">
             <thead>
               <tr>
                 <th scope="col">S.NO</th>
                 <th scope="col">City Name</th>
                 <th scope="col">Package Name</th>
                 <th scope="col">Package Type</th>
                 <th scope="col">Delete Package</th>
               </tr>
             </thead>
             <tbody>
               <%packageDetails.forEach(function(packageDetail,index){%>
               <tr>
                 <th scope="row"><%=index+1%></th>
                 <td>
                   <label for="" class="form-label"><%=packageDetail.packageCity%></label>
                 </td>
                 <td>
                   <label for="" class="form-label"><%=packageDetail.packageName%></label>
                 </td>
                 <td>
                   <label for="" class="form-label"><%=packageDetail.packageType%></label>
                 </td>

               <td><button type="submit"   name="todeletePackageID" value="<%=packageDetail.packageid%>" class="btn btn-outline-dark ">Drop Package</button></td>
               </tr>
               <%})%>
             </tbody>
           </table>

         </div>
        </form>

      </div>
      <%- include('sidebar');  -%>


    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="common.js"></script>
</body>

</html>
